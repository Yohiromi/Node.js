<form method="post" action="/adm/adm_edit_character">
    <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">subtitle</span>
        <input type="text" name="subtitle" value="<%= character.subtitle %>" class="form-control"
               aria-label="Sizing example input"
               aria-describedby="inputGroup-sizing-default">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">description</span>
        <input type="text" name="description" value="<%= character.description %>" class="form-control"
               aria-label="Sizing example input"
               aria-describedby="inputGroup-sizing-default">
    </div>
<div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">strength</span>
        <input type="text" name="strength" class="form-control" value="<%= character.strength%>"
               aria-label="Sizing example input"
               aria-describedby="inputGroup-sizing-default">
    </div>
    <span class="error-message name-error" id="strength_error" style="color:red; display:none;"></span>


    <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">speed</span>
        <input type="text" name="speed" class="form-control" value="<%= character.speed%>"
               aria-label="Sizing example input"
               aria-describedby="inputGroup-sizing-default">
    </div>
    <span class="error-message name-error" id="speed_error" style="color:red; display:none;"></span>

    <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">skill</span>
        <input type="text" name="skill" class="form-control" value="<%= character.skill%>"
               aria-label="Sizing example input"
               aria-describedby="inputGroup-sizing-default">
    </div>
    <span class="error-message name-error" id="skill_error" style="color:red; display:none;"></span>

    <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">fear_factor</span>
        <input type="text" name="fear_factor" class="form-control" value="<%= character.fear_factor%>"
               aria-label="Sizing example input"
               aria-describedby="inputGroup-sizing-default">
    </div>
    <span class="error-message name-error" id="fear_factor_error" style="color:red; display:none;"></span>


    <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">power</span>
        <input type="text" name="power" class="form-control" value="<%= character.power%>"
               aria-label="Sizing example input"
               aria-describedby="inputGroup-sizing-default">
    </div>
    <span class="error-message name-error" id="power_error" style="color:red; display:none;"></span>

    <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">intelligence</span>
        <input type="text" name="intelligence" class="form-control" value="<%= character.intelligence%>"
               aria-label="Sizing example input"
               aria-describedby="inputGroup-sizing-default">
    </div>
    <span class="error-message name-error" id="intelligence_error" style="color:red; display:none;"></span>


    <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">wealth</span>
        <input type="text" name="wealth" class="form-control" value="<%= character.wealth%>"
               aria-label="Sizing example input"
               aria-describedby="inputGroup-sizing-default">
    </div>
    <span class="error-message name-error" id="wealth_error" style="color:red; display:none;"></span>

    <input type="hidden" name="chara_id" value="<%= character._id %>">
    <input type="hidden" name="chara_name_id" value="<%= character.id %>">
    <input type="hidden" name="chara_name" value="<%= character.name %>">
    <input type="hidden" name="chara_active" value="<%= character.active %>">
    <input type="hidden" name="chara_image_url" value="<%= character.image_url %>">
    <button type="submit" id="submit" style="width: 100%" class="btn btn-primary">Submit</button>
</form>
<script src="/JS/check_edit_character.js"></script>
